<h1>Listing triggers</h1>

<table>
  <thead>
    <tr>
      <th>Device</th>
      <th>Title</th>
      <th>Email</th>
      <th>Property</th>
      <th>Operation</th>
      <th>Value</th>
      <th>Message</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @triggers.each do |trigger| %>
      <tr>
        <td><%= trigger.device %></td>
        <td><%= trigger.title %></td>
        <td><%= trigger.email %></td>
        <td><%= trigger.property %></td>
        <td><%= trigger.operation %></td>
        <td><%= trigger.value %></td>
        <td><%= trigger.message %></td>
        <td><%= link_to 'Show', trigger %></td>
        <td><%= link_to 'Edit', edit_trigger_path(trigger) %></td>
        <td><%= link_to 'Destroy', trigger, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Trigger', new_trigger_path %>
